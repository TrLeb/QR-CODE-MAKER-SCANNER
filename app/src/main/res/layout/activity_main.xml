<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/qrInputET"
        android:layout_width="406dp"
        android:layout_height="74dp"
        android:layout_marginTop="4dp"
        android:hint="Enter User Details: Name, Id, Covid Status and Vaccination Status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/genBtn"
        android:layout_width="271dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:text="GENERATE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrInputET" />

    <ImageView
        android:id="@+id/qrHolderIV"
        android:layout_width="325dp"
        android:layout_height="284dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genBtn"
        app:srcCompat="@android:color/darker_gray" />

    <Button
        android:id="@+id/scanBtn"
        android:layout_width="320dp"
        android:layout_height="59dp"
        android:layout_marginTop="44dp"
        android:text="scan qr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrHolderIV" />

</androidx.constraintlayout.widget.ConstraintLayout>